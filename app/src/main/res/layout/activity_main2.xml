<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#00bcd4" tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rel_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:transitionName="relLayout1">
        <ImageButton
            android:id="@+id/icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_action_games_2"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fun and Games"
            android:layout_below="@id/icon_1"
            android:transitionName="selectedText1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="115dp"
        android:transitionName="relLayout2">
        <ImageButton
            android:id="@+id/icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_laptop_mac_2"
            android:layout_centerHorizontal="true"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/icon_2"
            android:text="Coding"
            android:transitionName="selectedText2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_layout_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:orientation="vertical"
        android:transitionName="relLayout3">
        <ImageButton
            android:id="@+id/icon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_whatshot_2"
            android:layout_centerHorizontal="true"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre-Fest"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/icon_3"
            android:transitionName="selectedText3"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_layout_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:orientation="vertical"
        android:transitionName="relLayout4">
        <ImageButton
            android:id="@+id/icon_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_action_book_2"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/icon_4"
            android:text="Literary"
            android:transitionName="selectedText4"/>
    </RelativeLayout>
</RelativeLayout>
